<odoo>
    <record id="view_lead_sms_wizard_form" model="ir.ui.view">
        <field name="name">lead.sms.wizard.form</field>
        <field name="model">lead.sms.wizard</field>
        <field name="arch" type="xml">
            <form string="Send SMS">
                <group>
                    <field name="partner_id"/>
                    <field name="phone_no"/>
                    <field name="message_body"/>
                </group>
                <footer>
                    <button name="action_send_sms" type="object" string="Send" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
